                                          <TableColumn fx:id="companyIdColumn" prefWidth="75.0" text="company_id" />
                                          <TableColumn fx:id="companyNameColumn" prefWidth="75.0" text="companies_name" />
                                          <TableColumn fx:id="priceColumn" prefWidth="75.0" text="price" />
                                       </columns>
                                    </TableView>
                                 </children>
                              </AnchorPane>
                           </content>
                        </ScrollPane>
                     </children>
                  </Pane>
               </content>
            </Tab>
            <Tab fx:id="historyTab" text="History">
               <content>
                  <TableView fx:id="historyTableView" prefHeight="200.0" prefWidth="200.0">
