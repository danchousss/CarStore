               <content>
                  <FlowPane fx:id="profileFlowPane" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Pane fx:id="profileHeaderPane" prefHeight="33.0" prefWidth="601.0" style="-fx-background-color: grey;">
